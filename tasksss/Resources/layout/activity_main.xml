<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/abc_text_size_display_2_material"
        android:layout_marginTop="@dimen/abc_action_bar_content_inset_with_nav"
        android:layout_marginRight="@dimen/abc_text_size_body_1_material"
     >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/login"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="35sp"
                android:padding="0dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="47.3dp"
                android:text="@string/in"
                android:textStyle="bold"
                android:textColor="@color/xyz"
                android:textSize="35sp"
                android:padding="0dp"
            />
     </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:layout_marginLeft="@dimen/abc_text_size_display_2_material"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/creat"
                android:padding="0dp"
               
                android:textSize="15sp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_start_material"
                android:text="@string/dont"
                android:textColor="@color/lightread"
                android:textSize="15sp"
                android:id="@+id/newaccount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_marginLeft="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_marginTop="@dimen/abc_list_item_height_large_material">
       <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/abc_action_bar_default_height_material"
         android:id="@+id/username"
         android:inputType="text"
         android:singleLine="true" 
         android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
         android:drawablePadding="@dimen/abc_action_bar_overflow_padding_end_material" 
         android:hint="@string/user"
        android:background="@drawable/broder"
        android:drawableLeft="@drawable/persons" 
            
            
            
            />
        <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/abc_action_bar_default_height_material"
         android:id="@+id/password"
         android:inputType="textPassword"
          android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
         android:drawablePadding="@dimen/abc_action_bar_overflow_padding_end_material" 
         android:paddingHorizontal="@dimen/abc_action_bar_overflow_padding_end_material" 
         android:hint="@string/pass"
         
         android:background="@drawable/broder"
         android:drawableLeft="@drawable/key"  
         />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgetsss"
        android:layout_marginLeft="@dimen/abc_action_bar_default_height_material"
        android:layout_marginTop="5dp"
        
      
        android:textSize="15sp"
        android:layout_gravity="right"
        android:id="@+id/forgot"/>

        </LinearLayout>
    
    <Button
        android:text="@string/buttonlog"
       
        android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:layout_gravity="center"
        android:id="@+id/login"
        android:imeOptions="actionNext"
        android:padding="@dimen/abc_action_bar_overflow_padding_end_material"
        app:cornerRadius="50dp"
        android:textSize="17sp"
        
        android:layout_marginTop="@dimen/abc_select_dialog_padding_start_material"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:text="@string/logwithss"
         android:textSize="20sp"
        android:layout_marginLeft="@dimen/abc_list_item_height_large_material"
        
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/facebok"
            android:contentDescription="description" 
            
            android:id="@+id/facebook"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/abc_action_bar_content_inset_material"
            android:src="@drawable/google"
            android:id="@+id/google"
            android:contentDescription="description" 
            />



    </LinearLayout>





</LinearLayout>